<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".fragment.ButtonToCreateFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/goToCreatorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create My Weekly"
        android:backgroundTint="#ad5f00"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/goToCreatorButton"
        android:text="Get started on generating your weekly plan!"
        android:layout_centerHorizontal="true"
        android:textColor="#a3a3a3"
        android:layout_marginTop="20dp"/>

</RelativeLayout>